    <title>Alternating Row Colors Table</title>

    <!-- Internal CSS for styling the table -->
    <style>
        /* General font settings for the body */
        body {
            font-family: Arial, sans-serif; /* Font family for the entire document */
            font-size: 16px; /* Base font size for the document */
            color: #333; /* Default text color (dark gray) */
        }

        /* Center the heading */
        h2 {
            text-align: center; /* Centers the heading text */
            margin-top: 20px; /* Adds some space above the heading */
            font-size: 24px; /* Font size for the heading */
            color: #0056b3; /* Heading color (blue) */
        }

        /* Basic table styling */
        table {
            width: 60%; /* Adjusted the width to accommodate an additional column */
            border-collapse: collapse; /* Removes the space between table borders */
            margin: 20px auto; /* Centers the table on the page */
            font-size: 16px; /* Font size for the table content */
            color: #333; /* Default font color for the table content (dark gray) */
        }

        /* Styling for table headers and cells */
        th, td {
            padding: 10px; /* Adds padding inside the cells */
            text-align: left; /* Aligns text to the left */
            border: 1px solid #ddd; /* Adds a light border around cells */
        }

        /* Styling for the table header */
        th {
            background-color: #007bff; /* Background color for header (blue) */
            color: #fff; /* Text color for header (white) */
            font-weight: bold; /* Bold font for header */
        }

        /* Styling for odd rows (1st, 3rd, 5th, etc.) */
        tr:nth-child(odd) {
            background-color: #f0f8ff; /* Light Blue color for odd rows */
            color: #333; /* Dark gray font color for odd rows */
        }

        /* Styling for even rows (2nd, 4th, 6th, etc.) */
        tr:nth-child(even) {
            background-color: #f2f2f2; /* Light Gray color for even rows */
            color: #555; /* Slightly lighter gray font color for even rows */
        }
    </style>
</head>
